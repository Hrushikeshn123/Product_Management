doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title New registration
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
    body
      section.container-fluid 
        section.row 
          section.col-4.m-auto.card.mt-4
            if(message !== "")
              #message
                .alert.alert-primary(role="alert") #{message}
              script.
                let message = "#{message}"
                  if(message !== ""){
                    setTimeout(()=>{
                      document.querySelector('#message').innerHTML = " "
                    },2000)
                  }
            p.mb-0.text-center.h4.mt-3.text-primary  User Login
            form( action="/user-login" method="post")  
              .mb-3
                label.form-label(for="email")   Email
                input.form-control#email( name="email" type="email", placeholder="Enter email" required value="") 
              .mb-3
                label.form-label(for="password") Password
                input.form-control#password(name="password" type="password", placeholder="Enter Password" required value="")  
              .mb-3.text-center 
                button(type="submit").btn.btn-success login
                button(type="reset").ms-2.btn.btn-outline-danger Reset       
              .mb-3.text-center  
                p 
                  |Don't  have a account ? click 
                  a(href="/new-registration") here 
                  | to create account. 