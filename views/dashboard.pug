doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
        script.
          let id = '#{login.user._id}'
          alert(id)
        script(src="/js/product.client.js")   
    body
      section.container.fluid
        .modal.fade(tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false")#addNewProduct
          .modal-dialog.modal-lg
            .modal-content
              .modal-header
                h5.modal-title Add New Product
                button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
              .modal-body
                .row 
                  .col-8 
                    form
                      .mb-3
                        label.form-label(for="productName") Name
                        input.form-control#productName(type="email")
                      .mb-3
                        label.form-label(for="qty") Qty
                        input.form-control#qty(type="number")
                      .mb-3
                        label.form-label(for="price") Price
                        input.form-control#price(type="number")
                      .mb-3
                        label.form-label(for="mangDate") Mang Date
                        input.form-control#mangDate(type="date")
                      .mb-3
                        label.form-label(for="mangDate") Product Image
                        input.form-control#pic(type="file" name="pic")  
                      div.text-center   
                        button.btn.btn-primary#saveNewProductBtn(type="button") Submit
                        button.btn.btn-outline-danger.mx-2(type="reset") Reset 
                  .col-4.d-flex.align-items-center
                    img#preview.border(src="/demopic/preview.png",alt="", style="height:150px;width:150px")                               
        section.row.border-bottom.border-2 
          section.col-11.m-auto.d-flex.justify-content-between.py-2  
            p.h4.mb-0 Welcome #{login.user.name.split(' ')[0]} 
            a.btn.btn-danger.btn-sm(href="/logout")  Logout
        section.row  
          section.col-10.m-auto
            p.mt-4.text-center.fs-3.text-primary Product List 
            button.btn.btn-primary.btn-sm.mb-2(data-bs-toggle="modal" data-bs-target="#addNewProduct") +Add 
            table.table.table-bordered.mt-4
              thead
                tr
                  th(width="10%") Sr. No
                  th(width="55%") Name
                  th(width="30%") Cost
                  th(width="25%") Quantity
                  th(width="15%") Action
              tbody#id-tbody
               